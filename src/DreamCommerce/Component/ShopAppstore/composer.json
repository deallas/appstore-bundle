{
  "name": "dreamcommerce/shop-appstore",
  "type": "library",
  "description": "Component for DreamCommerce-based shop application",
  "license": "MIT",
  "authors": [
    {
      "name": "Michał Korus",
      "email": "michal.korus@dreamcommerce.com"
    },
    {
      "name": "Przemysław eRIZ Pawliczuk",
      "email": "przemyslaw.pawliczuk@shoper.pl"
    }
  ],
  "require": {
    "php": "^7.1",
    "sylius/resource": "^1.0",
    "sylius/registry": "^1.0",
    "psr/http-message": "^1.0",
    "dreamcommerce/common-bundle": "dev-master",
    "doctrine/common": "^2.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.5",
    "symplify/easy-coding-standard": "^2.4",
    "sylius-labs/coding-standard": "^1.0",
    "guzzlehttp/guzzle": "^6.2"
  },
  "config": {
    "bin-dir": "bin"
  },
  "autoload": {
    "psr-4": { "DreamCommerce\\Component\\ShopAppstore\\": "" },
    "exclude-from-classmap": [
      "/Tests/"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "path",
      "url": "../../*/*"
    }
  ]
}
